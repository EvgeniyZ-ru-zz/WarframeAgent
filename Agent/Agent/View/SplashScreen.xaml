<Window x:Class="Agent.View.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d" Style="{DynamicResource WindowStyle}"
        Title="SplashScreen" Height="120" Width="330" AllowsTransparency="True"
        WindowStyle="None" WindowStartupLocation="CenterScreen" Icon="/Agent;component/Resources/Icon.ico">
    <Border Style="{StaticResource BoxPanel}">
        <Border.Effect>
            <DropShadowEffect Direction="-90" ShadowDepth="0" Color="#FF3A2985"/>
        </Border.Effect>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="18" Foreground="{DynamicResource TextColor}" VerticalAlignment="Center"
                   Content="WARFRAME AGENT" />
            <fa:ImageAwesome Icon="CircleOutlineNotch" Spin="True" SpinDuration="4" Width="30"
                             Foreground="{DynamicResource TextColor}" />
        </StackPanel>
    </Border>
</Window>
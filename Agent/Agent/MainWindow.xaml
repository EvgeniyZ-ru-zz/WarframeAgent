            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <!-- Основная часть приложения -->

                <StackPanel>
                    <Label x:Name="testLable" Content="aafgs" />
                    <ComboBox x:Name="styleBox" Height="30" Width="150" />

                    <ListBox x:Name="alertbox" Background="{x:Null}" BorderBrush="{x:Null}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Label Content="{Binding MissionInfo.Location}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>


            </Grid>

            <Rectangle x:Name="BottomRightSizeGrip"
                       Width="8"
                       Height="8" Panel.ZIndex="2"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Cursor="SizeNWSE"
                       Style="{StaticResource RectBorderStyle}" Grid.Row="1" Grid.Column="1" />

        </Grid>

    </Border>
</Window>

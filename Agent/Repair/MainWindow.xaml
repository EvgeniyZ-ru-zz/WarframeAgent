<Window x:Class="Repair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Repair"
        mc:Ignorable="d"
        Title="MainWindow" Height="120" Width="330" AllowsTransparency="True" Icon="icon.ico"
        WindowStyle="None" WindowStartupLocation="CenterScreen" Background="{x:Null}" Foreground="{DynamicResource TextColor}" MouseLeftButtonDown="MainWindow_OnMouseLeftButtonDown" Loaded="MainWindow_OnLoaded">
    <Border Style="{StaticResource BoxPanel}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="18" Foreground="{DynamicResource TextColor}" VerticalAlignment="Center"
                   Content="WARFRAME AGENT" />
            <TextBlock FontSize="15"  Text="{Binding Status, FallbackValue=STATUS}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
